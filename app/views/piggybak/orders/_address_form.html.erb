<div class="item">
	<div class="form-group">
		<%= address.label :firstname, class: 'col-sm-3 control-label' %>
		<%= address.text_field :firstname, :class => "required" %>
	</div>
</div>
<div class="item">
	<div class="form-group">
		<%= address.label :lastname, class: 'col-sm-3 control-label' %>
		<%= address.text_field :lastname, :class => "required" %>
	</div>
</div>
<div class="item">
	<div class="form-group">
		<%= address.label :address1, "Address", class: 'col-sm-3 control-label' %>
		<%= address.text_field :address1, :class => "required" %>
	</div>
</div>
<div class="item">
	<div class="form-group">
		<%= address.label :address2, "Address cont.", class: 'col-sm-3 control-label' %>
		<%= address.text_field :address2 %>
	</div>
</div>
<div class="item">
	<div class="form-group">
		<%= address.label :city, class: 'col-sm-3 control-label'%>
		<%= address.text_field :city, :class => "required" %>
	</div>
</div>
<div class="item">
	<div class="form-group">
		<%= address.label :country_id, class: 'col-sm-3 control-label' %>
		<%= address.collection_select :country_id, Piggybak::Country.send(type), :id, :name, { :selected => address.object.country_id.to_s }, :class => "required" %>
	</div>
</div>
<div class="item">
	<div class="form-group">
		<%= address.label :state_id, class: 'col-sm-3 control-label' %>
		<% if address.object.country.states.any? -%>
			<%= address.collection_select :state_id, address.object.country.states, :id, :name, { :selected => address.object.state_id.to_s }, :class => "required" , class: 'col-sm-3 control-label'%>
		<% else -%>
			<%= address.text_field :state_id, :class => "required" %>
		<% end -%>
	</div>
</div>
<div class="item">
	<div class="form-group">
		<%= address.label :zip, class: 'col-sm-3 control-label'%>
		<%= address.text_field :zip, :class => "required" %>
	</div>
</div>
