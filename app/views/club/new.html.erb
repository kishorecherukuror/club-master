     }
     function set_end_date()
     {
       var start_date = $('#msd').val();
       
       if (start_date!="")
       {
        var pattern = /(\d{2})\/(\d{2})\/(\d{4})/;
        var dt = new Date(start_date);
        var duration = $('#membership_dom').val();
        
        if (duration=="")
