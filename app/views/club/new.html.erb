        dt.setMonth(dt.getMonth() + parseInt(duration) )
        $('#membership_med').val((dt.getMonth()+1) + "/" + dt.getDate() + "/" + dt.getFullYear());
      }
     }

     function set_amount()
    {
      var duration = $('#membership_dom').val();
      var member_tupe=$("#membership_member_type").val();
